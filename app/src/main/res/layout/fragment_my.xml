<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:id="@+id/frame_my">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="144dp"
         android:layout_marginBottom="@dimen/activity_vertical_margin"
         android:background="@drawable/bg_retangle"
         android:orientation="vertical"
         android:clickable="true">
         <ImageView
             android:id="@+id/iv_login"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/margin"
             android:layout_gravity="center"
             android:background="@drawable/bg_bt_login" />
         <TextView
             android:id="@+id/tv_login"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginBottom="@dimen/margin_bottom"
             android:textSize="@dimen/text_middle"
             android:textColor="@color/white"
             android:text="@string/my_name" />
         
     </LinearLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="@dimen/layout_height"
         android:background="@drawable/bg_my_visa_selector"
         android:clickable="true"
         android:orientation="horizontal"
         android:weightSum="1">

         <TextView
             android:id="@+id/text_my_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:textSize="@dimen/text_middle"
             android:layout_marginLeft="@dimen/margin_left"
             android:text="@string/my_visa"
             android:textColor="@color/black"
             android:layout_weight="0.9"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:gravity="right"
             android:textSize="@dimen/text_middle"
             android:layout_marginRight="2dp"
             android:text="全部"
             android:layout_weight="0.05"/>
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:background="@drawable/arrow"
             android:layout_marginRight="16dp"
             android:layout_weight="0.05"/>
     </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@drawable/bg_divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/white"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/iv_visa_unused"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_gravity="center"
                    android:background="@drawable/unused" />
                <TextView
                    android:id="@+id/text_visa_unused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_small"
                    android:text="未使用" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/iv_visa_outtime"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_gravity="center"
                    android:background="@drawable/outtime" />
                <TextView
                    android:id="@+id/text_visa_outtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_small"
                    android:text="已过期" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/iv_visa_handle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_gravity="center"
                    android:background="@drawable/handle" />
                <TextView
                    android:id="@+id/text_visa_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_small"
                    android:text="处理中" />
            </LinearLayout>
        </LinearLayout>
     <LinearLayout
         android:id="@+id/ll_safe"
         android:layout_width="match_parent"
         android:layout_height="@dimen/layout_height"
         android:background="@drawable/bg_my_visa_selector"
         android:clickable="true"         
         android:orientation="horizontal">
         <ImageView
             android:id="@+id/iv_my_safe"
             android:layout_width="@dimen/icon_width"
             android:layout_height="@dimen/icon_height"
             android:layout_marginLeft="@dimen/margin_left"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_gravity="center"
             android:background="@drawable/safe" />
         <TextView
             android:id="@+id/text_my_safe"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:textSize="@dimen/text_middle"
             android:textColor="@color/black"
             android:text="@string/my_safe" />
         
     </LinearLayout>
     <View  
         android:layout_width="match_parent"
         android:layout_height="@dimen/line_height"
         android:background="@drawable/bg_divider"/>
     <LinearLayout
         android:id="@+id/ll_set"
         android:layout_width="match_parent"
         android:layout_height="@dimen/layout_height"
         android:layout_marginBottom="@dimen/activity_vertical_margin"
         android:background="@drawable/bg_my_visa_selector"
         android:clickable="true"
         android:orientation="horizontal" >
         <ImageView
             android:id="@+id/iv_my_set"
             android:layout_width="@dimen/icon_width"
             android:layout_height="@dimen/icon_height"
             android:layout_marginLeft="@dimen/margin_left"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_gravity="center"
             android:background="@drawable/set" />
         <TextView
             android:id="@+id/text_my_set"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:textSize="@dimen/text_middle"
             android:textColor="@color/black"
             android:text="@string/my_set" />
         
     </LinearLayout>
    </LinearLayout>
</FrameLayout>
