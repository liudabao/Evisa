<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/set_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/bg_retangle"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/iv_set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_back_selector"/>
        <TextView
            android:id="@+id/text_set_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big"
            android:text="设置" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/set_explain"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/light_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/version"
            android:text="签证通"
            android:textColor="@color/grey"
            android:textSize="32sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tip"
            android:text="申签证   就用签证通"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_below="@+id/version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/bg_my_visa_selector"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_set_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/grey"
            android:layout_marginLeft="16dp"
            android:text="清空缓存" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/bg_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/bg_my_visa_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/text_set_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/grey"
            android:layout_marginLeft="16dp"
            android:text="意见反馈" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/bg_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@drawable/bg_my_visa_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/text_set_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/grey"
            android:layout_marginLeft="16dp"
            android:text="检查新版本" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@drawable/bg_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/bg_my_visa_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/text_set_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_middle"
            android:textColor="@color/grey"
            android:layout_marginLeft="16dp"
            android:text="关于" />
    </LinearLayout>
</LinearLayout>