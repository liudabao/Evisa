<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- padding设置内间距 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
    <!-- size设置形状的大小 -->
    <size
        android:width="60dp"
        android:height="60dp" />
    <!-- gradient设置渐变 -->
    <gradient
        android:endColor="#fff8dc"
        android:gradientRadius="60"
        android:startColor="#ffebcd"
        android:type="radial" />
</shape>
